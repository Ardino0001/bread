local MainTab = CreateTab("Main")
local SettingsTab = CreateTab("Settings")

task.defer(function()
    Tabs["Main"].TextColor3 = Color3.new(1, 1, 1)
    Tabs["Main"].BackgroundColor3 = CONFIG.AccentColor
    TabContents["Main"].Visible = true
    ActiveTab = "Main"
end)

-- ============================================
-- UI ELEMENTS
-- ============================================
local speedSection = Section(MainTab, "Speed Hack")
Toggle(speedSection, Settings.SpeedEnabled, function(v)
    Settings.SpeedEnabled = v
    if not v and LocalPlayer.Character then
        local hum = LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = OriginalWalkSpeed end
    end
end)

Slider(MainTab, "Speed Value", 16, 400, Settings.SpeedValue, function(v)
    Settings.SpeedValue = v
end)

Keybind(SettingsTab, "Toggle Key", CONFIG.ToggleKey, function(v) CONFIG.ToggleKey = v end)

-- ============================================
-- SPEED LOGIC (CFrame Velocity Bypass)
-- ============================================
local function GetMovementDirection()
    local moveDir = Vector3.zero
    
    if UserInputService:IsKeyDown(Enum.KeyCode.W) then
        moveDir = moveDir + Vector3.new(0, 0, -1)
    end
    if UserInputService:IsKeyDown(Enum.KeyCode.S) then
        moveDir = moveDir + Vector3.new(0, 0, 1)
    end
    if UserInputService:IsKeyDown(Enum.KeyCode.A) then
        moveDir = moveDir + Vector3.new(-1, 0, 0)
    end
    if UserInputService:IsKeyDown(Enum.KeyCode.D) then
        moveDir = moveDir + Vector3.new(1, 0, 0)
    end
    
    if moveDir.Magnitude > 0 then
        moveDir = moveDir.Unit
    end
    
    return moveDir
end

RunService.RenderStepped:Connect(function(deltaTime)
    if not Loaded then return end
    
    if Settings.SpeedEnabled and LocalPlayer.Character then
        local hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        local hum = LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
        
        if hrp and hum and hum.MoveDirection.Magnitude > 0 then
            -- Calculate extra speed (on top of normal WalkSpeed)
            local extraSpeed = (Settings.SpeedValue - 16) * deltaTime
            
            -- Get camera-relative movement direction
            local camera = workspace.CurrentCamera
            local camCFrame = camera.CFrame
            local camLook = Vector3.new(camCFrame.LookVector.X, 0, camCFrame.LookVector.Z).Unit
            local camRight = Vector3.new(camCFrame.RightVector.X, 0, camCFrame.RightVector.Z).Unit
            
            -- Convert humanoid move direction to world space boost
            local moveDir = hum.MoveDirection
            local boost = moveDir * extraSpeed
            
            -- Apply CFrame offset (bypasses WalkSpeed checks)
            hrp.CFrame = hrp.CFrame + boost
        end
    end
end)
